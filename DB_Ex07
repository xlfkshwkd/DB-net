FROM EMP E, DEPT D WHERE E.ENAME ='ALLEN';



SELECT E.EMPNO ,ENAME E, JOB , D.DEPTNO ,D.DNAME LOC 
FROM DEPT D,EMP E WHERE D.DEPTNO =10 AND (SELECT IS NOT JOB AND DEPTNO =30)




