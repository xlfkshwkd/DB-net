

CREATE TABLE EMP_HW(
EMPNO NUMBER(4),
ENAME VARCHAR2(10),
JOB VARCHAR2(9),
MGR NUMBER(4),
HIREDATE DATE,
SAL VARCHAR2(7,2),
COMM VARCHAR2(7,2),
DEPTNO NUMBER(2)

);
ALTER EMP_HW ADD BIGO VARCHAR(20);

ALTER EMP_HW MODFIY BIGO VARCHAR(30);


ALTER EMP_HW RENAME BIGO REMAEK;

DROP TABLE FROM EMP_HW;


CREATE TABLE EMPIDX FROM EMP WHERE (SELECT* FROM EMP WHERE 1<>1);



CREATE INDEX IDX_EMPIDX_EMPNO FROM EMPIDX WHERE EMPNO;

SELECT *FROM MGMT_VIEW


CREATE TABLE DEPT_CONST (
	DEPTNO NUMBER(2) CONSTRAINT DEPTCONST_DEPTNO_PK PRIMARY KEY,
	DNAME VARCHAR(14) CONSTRAINT DEPTCONST_DNAME_UNQ UNIQUE,
	LOC VARCHAR(13) CONSTRAINT DEPTCONST_LOC_NN NOT NULL
	
)



CREATE TABLE EMP_CONST (
	EMPNO NUMBER(4) CONSTRAINT EMPCONST_EMPNO_PK PRIMARY KEY,
	ENAME VARCHAR2(10) CONSTRAINT EMPCONST_ENAME_NM NOT NULL,
	JOB VARCHAR2(9),
	TEL VARCHAR2(20) CONSTRAINT EMPCONST_TEL_UNQ  UNIQUE,
	HIREDATE DATE,
	SAL VARCHAR2(72)CONSTRAINT EMPCONST_SAL_CHK CHECK BETWEEN 1000 AND 9999 ,
	COMM VARCHAR2 (7,2),
	DEPTNO NUMBER(2) CONSTRAINT EMPCONST_DEPTNO_FK FOREIGN KEY 
	
	
)




SELECT * FROM EMP_CONST,DEPT_CONST


SELECT * FROM EMP WHERE DEPTNO =30;


CREATE VIEW VM_EMP30ALL (SELECT * FROM EMP WHERE DEPTNO =30);





CREATE TABLE CHAP10HW_EMP AS SELECT * FROM EMP;

 CREATE TABLE CHAP10HW_DEPT AS SELECT * FROM DEPT;
CREATE TABLE CHAP10HW_SALGRADE AS SELECT * FROM SALGRADE;


