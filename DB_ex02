SELECT *FROM EMP;

CREATE OR REPLACE  VIEW VW_EMP20 
AS (SELECT EMPNO ,ENAME,JOB,MGR,DEPTNO FROM EMP WHERE DEPTNO=20);

SELECT *FROM VW_EMP20;

SELECT *FROM USER_VIEWS;
--뷰구경 

DROP VIEW VW_EMP20;

SELECT *FROM (SELECT EMPNO,ENAME,JOB FROM EMP WHERE DEPTNO=20)  E
WHERE E.EMPNO=1000;

--AS 는 별칭 

SELECT E.EMPNO AS "직원번호" ,E.ENAME AS "직원명", E.JOB AS "직업" FROM
EMP E ;
--AS 와 "" 생략가능 

SELECT E.EMPNO 직원번호 ,E.ENAME 직원명, E.JOB 직업 FROM
EMP E ;

SELECT ROWNUM ,EMPNO FROM EMP;





WITH E2 AS(SELECT ROWNUM AS NUM ,E.* FROM EMP E)
SELECT *FROM E2 
WHERE E2.NUM >=3 AND E2.NUM<=7; 
--WITH 오라클에 만있음 

























